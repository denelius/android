<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scroller"
            android:background="@color/nfbg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="20px">
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/nfbg">
        <LinearLayout
                android:id="@+id/ll00"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/TextView00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="48sp"
                android:layout_weight="0.9"
                android:layout_marginBottom="30sp"
                android:layout_marginLeft="5sp"
                android:layout_below="@+id/TextView00"
                android:textStyle="bold"
                android:textColor="@color/nftxt"
                android:text="Form">
            </TextView>
            <ImageButton
                android:id="@+id/IB_cart"
                android:background="@null"
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_ecart48">
            </ImageButton>
        </LinearLayout>
        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16pt"
            android:textStyle="bold"
            android:layout_marginLeft="10sp"
            android:layout_below="@+id/ll00"
            android:textColor="@color/nftxt"
            android:text="user name: ">
        </TextView>
        <TextView
            android:id="@+id/TV_uname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16pt"
            android:layout_marginLeft="5sp"
            android:layout_below="@+id/ll00"
            android:layout_toRightOf="@+id/TextView01"
            android:textColor="@color/nftxt"
            android:text="boogin">
        </TextView>
        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16pt"
            android:textStyle="bold"
            android:layout_marginBottom="30sp"
            android:layout_marginLeft="10sp"
            android:layout_below="@+id/TextView01"
            android:textColor="@color/nftxt"
            android:text="project: ">
        </TextView>
        <TextView
            android:id="@+id/TV_project"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16pt"
            android:layout_marginLeft="5sp"
            android:layout_below="@+id/TextView01"
            android:layout_toRightOf="@+id/TextView02"
            android:textColor="@color/nftxt"
            android:text="boogin">
        </TextView>
        <TextView
            android:id="@+id/TextView03"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16pt"
            android:textStyle="bold"
            android:layout_marginLeft="10sp"
            android:layout_below="@+id/TextView02"
            android:textColor="@color/nftxt"
            android:text="position source:">
        </TextView>
        <RadioGroup
            android:id="@+id/RG_location"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="15sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView03"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/RB_gps"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="40px"
                android:text="GPS"
                android:textSize="16pt"
                android:textColor="@color/nftxt">
            </RadioButton>
            <RadioButton
                android:id="@+id/RB_usr"
                android:checked="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="40px"
                android:text="user defined"
                android:textSize="16pt"
                android:textColor="@color/nftxt">
            </RadioButton>
        </RadioGroup>
        <TextView
            android:id="@+id/TextView04"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16pt"
            android:textStyle="bold"
            android:layout_marginLeft="10sp"
            android:layout_below="@+id/RG_location"
            android:textColor="@color/nftxt"
            android:text="location id:">
        </TextView>
        <EditText
            android:id="@+id/ET_locid"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView04"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="enter location id"
            android:textColorHint="@color/hint"
            android:textColor="@color/nftxt"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="15sp"
            android:textSize="20pt">
        </EditText>
        <TextView
            android:id="@+id/TextView05"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16pt"
            android:textStyle="bold"
            android:layout_marginLeft="10sp"
            android:layout_below="@+id/ET_locid"
            android:textColor="@color/nftxt"
            android:text="depth:">
        </TextView>
        <EditText
            android:id="@+id/ET_depth"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView05"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="enter depth"
            android:inputType="numberDecimal"
            android:textColorHint="@color/hint"
            android:textColor="@color/nftxt"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="15sp"
            android:textSize="20pt">
        </EditText>
        <TextView
            android:id="@+id/TextView06"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16pt"
            android:textStyle="bold"
            android:layout_marginLeft="10sp"
            android:layout_below="@+id/ET_depth"
            android:textColor="@color/nftxt"
            android:text="priority:">
        </TextView>
        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/nftxt"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="15sp"
            android:textSize="20pt"
            android:layout_below="@+id/TextView06"
            android:entries="@array/country_arrays"
            android:prompt="@string/country_prompt" />
        <TextView
            android:id="@+id/TextView07"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16pt"
            android:textStyle="bold"
            android:layout_marginLeft="10sp"
            android:layout_below="@+id/spinner1"
            android:textColor="@color/nftxt"
            android:text="comments:">
        </TextView>
        <EditText
            android:id="@+id/ET_comment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:maxLength="2000"
            android:layout_below="@+id/TextView07"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="enter comments"
            android:textColorHint="@color/hint"
            android:textColor="@color/nftxt"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="30sp"
            android:textSize="20pt">
        </EditText>
        <ImageView
            android:id="@+id/IV_camera"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ET_comment"
            android:layout_marginBottom="30sp"
            android:scaleType="centerInside"
            android:padding="15dp">
        </ImageView>
        <LinearLayout
            android:id="@+id/ll02"
            android:orientation="horizontal"
            android:layout_below="@+id/IV_camera"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/B_submit"
                android:layout_height="wrap_content"
                android:layout_width="260px"
                android:layout_marginLeft="25sp"
                android:background="@drawable/btn_green"
                android:textColor="#ffffff"
                android:shadowColor="#000000"
                android:textSize="43sp"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="submit">
            </Button>
            <ImageButton
                android:id="@+id/IB_cam"
                android:background="@null"
                android:layout_marginLeft="25sp"
                android:src="@drawable/ic_cam"
                android:layout_toRightOf="@+id/B_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageButton>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>