<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#3d3d3d"/>
            <stroke
                android:width="1dp"
                android:color="#5e5e5e"/>
            <corners
                android:radius="3dp"/>
            <padding
                android:left="10dp"
                android:top="0dp"
                android:right="10dp"
                android:bottom="0dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid
                    android:color="#6c6c6c"/>
            <stroke
                    android:width="1dp"
                    android:color="#5e5e5e"/>
            <corners
                    android:radius="4dp"/>
            <padding
                    android:left="10dp"
                    android:top="0dp"
                    android:right="10dp"
                    android:bottom="0dp"/>
        </shape>
    </item>
</selector>